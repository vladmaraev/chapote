      \usebeamerfont{title}\inserttitle%
    \end{beamercolorbox}%
    \vskip8mm%
    \setlength{\fboxsep}{0pt}
    \setlength{\fboxrule}{0pt}
    \framebox[102mm]{
    \begin{beamercolorbox}[wd=52mm,#1]{author}
      \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}
    \begin{beamercolorbox}[wd=50mm,#1]{institute}
      \usebeamerfont{institute}\RaggedRight\insertinstitute%
    \end{beamercolorbox}}
